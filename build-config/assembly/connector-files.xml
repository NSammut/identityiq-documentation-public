    <files>
        <file>
        <source>${project.basedir}/target/IdentityIQDocumentationGenerator-jar-with-dependencies.jar</source>
        <outputDirectory>lib</outputDirectory>
        <destName>IdentityIQDocumentationGenerator.jar</destName>           
    </file>
    </files>
    <fileSets>
        <!--
        <fileSet>
            <directory>${project.basedir}/target</directory>
